<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fragment_bg"
    android:orientation="vertical"
    tools:context="com.superchen.demo.activity.TestFrescoActivity"
    tools:ignore="HardcodedText">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/my_image_view"
                android:layout_width="match_parent"
                android:layout_height="190dp"
                android:background="@color/white"
                fresco:actualImageScaleType="focusCrop"
                fresco:failureImage="@mipmap/ic_default_download_error"
                fresco:failureImageScaleType="center"
                fresco:placeholderImage="@mipmap/ic_default_image_holder"
                fresco:placeholderImageScaleType="center"
                fresco:progressBarAutoRotateInterval="1000"
                fresco:progressBarImage="@mipmap/ic_image_progress"
                fresco:progressBarImageScaleType="centerInside"
                fresco:retryImage="@mipmap/ic_image_refresh"
                fresco:retryImageScaleType="centerInside" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:text="显示静态图片"
                android:textColor="@color/black"
                android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/my_image_gif_view"
                android:layout_width="match_parent"
                android:layout_height="190dp"
                android:background="@color/white"
                fresco:actualImageScaleType="focusCrop"
                fresco:failureImage="@mipmap/ic_default_download_error"
                fresco:failureImageScaleType="center"
                fresco:placeholderImage="@mipmap/ic_default_image_holder"
                fresco:placeholderImageScaleType="center"
                fresco:progressBarAutoRotateInterval="1500"
                fresco:progressBarImage="@mipmap/ic_image_progress"
                fresco:progressBarImageScaleType="centerInside"
                fresco:retryImage="@mipmap/ic_image_refresh"
                fresco:retryImageScaleType="centerInside" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:text="普通显示GIF动态图"
                android:textColor="@color/black"
                android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/my_image_view2"
                android:layout_width="match_parent"
                android:layout_height="190dp"
                android:background="@color/white" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:text="通过java代码设置SimpleDraweeView属性"
                android:textColor="@color/black"
                android:textSize="15sp" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
